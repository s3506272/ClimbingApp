
@model ClimbingApp.Models.Stat

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Stat</h4>
<hr />
<div id="statsbg" class="row no-gutters mb-3">
    <div class="col col-md-6 bg-form p-sm-5 p-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StatID" />
            <input type="hidden" asp-for="UserID" value="@ViewBag.UserID"/>
            <div class="form-group">
                <label asp-for="PullUp" class="control-label"></label>
                <input asp-for="PullUp" class="form-control" />
                <span asp-validation-for="PullUp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PushUp" class="control-label"></label>
                <input asp-for="PushUp" class="form-control" />
                <span asp-validation-for="PushUp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HangEdge" class="control-label"></label>
                <input asp-for="HangEdge" class="form-control" />
                <span asp-validation-for="HangEdge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HangWeight" class="control-label"></label>
                <input asp-for="HangWeight" class="form-control" />
                <span asp-validation-for="HangWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HighestSportGrade" class="control-label"></label>
                <select asp-for="HighestSportGrade" class="form-control" asp-items="ViewBag.Sport" ></select>
                <span asp-validation-for="HighestSportGrade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HighestBoulderingGrade" class="control-label"></label>
                <select asp-for="HighestBoulderingGrade" class="form-control" asp-items="ViewBag.Boulder"></select>
                <span asp-validation-for="HighestBoulderingGrade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
